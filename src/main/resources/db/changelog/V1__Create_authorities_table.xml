<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Lins">
        <createTable tableName="authorities">
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="authority" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey constraintName="pk_authorities" tableName="authorities" columnNames="email, authority"/>

        <addForeignKeyConstraint
                baseTableName="authorities"
                baseColumnNames="email"
                referencedTableName="users"
                referencedColumnNames="email"
                constraintName="fk_authorities_users"
                onDelete="CASCADE"/>

        <rollback>
            <dropTable ifExists="true" tableName="authorities"/>
        </rollback>
    </changeSet>

</databaseChangeLog>